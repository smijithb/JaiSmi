@using JaiSmi.Models

<div class="login-control">
    @if (User.Identity.IsAuthenticated)
    {
        <span class="user-avatar">@User.Identity.GetInitials()</span>
    }
    else
    {
        using (Html.BeginForm("ExternalLogin", "Account", new { ReturnUrl = "signin-google" }, FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <button type="submit" class="btn btn-default google-login-btn" id="Google" name="provider" value="Google" title="Log in using your Google account">
                <div class="google-login-icon" src="~/Images/Icons/btn_google_signin_light_normal_web@2x.png" alt="Sign In With Google"></div>
            </button>
        }
    }
</div>
